{
    "openapi": "3.0.0",
    "info": {
        "title": "API Militar",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost/Backend---Militar/public",
            "description": "Servidor local"
        }
    ],
    "paths": {
        "/users": {
            "get": {
                "tags": ["Usuarios"],
                "summary": "Obtener todos los usuarios",
                "security": [
                    {"bearerAuth": []}
                ],
                "responses": {
                    "200": {"description": "Lista de usuarios"}
                }
            },
            "post": {
                "tags": ["Usuarios"],
                "summary": "Crear un nuevo usuario (pruebas)",
                "security": [
                    {"bearerAuth": []}
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "username": {"type": "string"},
                                    "password": {"type": "string"},
                                    "rol": {"type": "string"}
                                },
                                "required": ["username", "password", "rol"]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {"description": "Usuario creado"}
                }
            }
        },
        "/users/{id}": {
            "get": {
                "tags": ["Usuarios"],
                "summary": "Obtener un usuario por ID",
                "security": [
                    {"bearerAuth": []}
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {"type": "integer"}
                    }
                ],
                "responses": {
                    "200": {"description": "Datos del usuario"},
                    "404": {"description": "Usuario no encontrado"}
                }
            },
            "put": {
                "tags": ["Usuarios"],
                "summary": "Actualizar usuario",
                "security": [
                    {"bearerAuth": []}
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {"type": "integer"}
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "username": {"type": "string"},
                                    "email": {"type": "string"}
                                },
                                "required": ["username", "email"]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {"description": "Usuario actualizado"}
                }
            },
            "delete": {
                "tags": ["Usuarios"],
                "summary": "Eliminar usuario",
                "security": [
                    {"bearerAuth": []}
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {"type": "integer"}
                    }
                ],
                "responses": {
                    "200": {"description": "Usuario eliminado"},
                    "500": {"description": "Error al eliminar"}
                }
            }
        },
        "/auth/login": {
            "post": {
                "tags": ["Usuarios"],
                "summary": "Login de usuario",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "username": {"type": "string"},
                                    "password": {"type": "string"}
                                },
                                "required": ["username", "password"]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Login exitoso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {"type": "string"},
                                        "token": {"type": "string"}
                                    }
                                }
                            }
                        }
                    },
                    "401": {"description": "Credenciales incorrectas"}
                }
            }
        },
        "/auth/register": {
            "post": {
                "tags": ["Usuarios"],
                "summary": "Registro de usuario (crea un nuevo usuario)",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "username": {"type": "string"},
                                    "password": {"type": "string"},
                                    "rol": {"type": "string"}
                                },
                                "required": ["username", "password", "rol"]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {"description": "Usuario registrado"},
                    "500": {"description": "Error al registrar"}
                }
            }
        },
        "/logout": {
            "post": {
                "tags": ["Usuarios"],
                "summary": "Logout (informativo)",
                "security": [
                    {"bearerAuth": []}
                ],
                "responses": {
                    "200": {"description": "Logout exitoso"}
                }
            }
        },
        "/miembros/total/{estado}": {
            "get": {
                "tags": ["Miembros"],
                "summary": "Cantidad de todos los miembros activos",
                "security": [
                    {"bearerAuth": []}
                ],
                "operationId": "getCountMiembrosActivos",
                "parameters": [
                    {
                        "name": "estado",
                        "in": "path",
                        "description": "Estado (ACTIVO || FALLECIDO)",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Cantidad de Miembros Activos",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "integer"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/miembros": {
            "get": {
                "tags": ["Miembros"],
                "summary": "Obtener la lista de todos los miembros Activos con sus logros e imagenes  de la promocion",
                "security": [
                    {"bearerAuth": []}
                ],
                "operationId": "ListarAllMiembrosActivos",
                "responses": {
                    "200": {
                        "description": "Lista de miembros activos",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "properties": {
                                            "id_miembro": {
                                                "type": "integer"
                                            },
                                            "nombres": {
                                                "type": "string"
                                            },
                                            "cargo": {
                                                "type": "string"
                                            },
                                            "descripcion": {
                                                "type": "string"
                                            },
                                            "num_contacto": {
                                                "type": "string"
                                            },
                                            "correo": {
                                                "type": "string"
                                            },
                                            "lugar": {
                                                "type": "string"
                                            },
                                            "logros": {
                                                "type": "string"
                                            },
                                            "ruta_imagenes": {
                                                "type": "string"
                                            }
                                        },
                                        "type": "object"
                                    }
                                }
                            }
                        }
                    },
                    "204": {
                        "description": "No hay miembros activos",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/miembros/{id}": {
            "get": {
                "tags": ["Miembros"],
                "summary": "Obtener el Miembro con sus logros e imagenes por Id",
                "security": [
                    {"bearerAuth": []}
                ],
                "operationId": "GetMiembroById",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Id del Miembro",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Miembro encontrado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "type": "integer"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Miembro no encontrado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "error": {
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "tags": ["Miembros"],
                "summary": "Eliminar un miembro por su Id",
                "security": [
                    {"bearerAuth": []}
                ],
                "description": "Eliminar un miembro por su ID",
                "operationId": "getDeleteById",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Miembro Eliminado Exitosamente",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "El Id no se Existe",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer"
            }
        }
    }
}
